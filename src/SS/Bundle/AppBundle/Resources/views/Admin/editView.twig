<div class="ibox float-e-margins">
  <div class="ibox-title">
    <a href="#" class="btn-remove pull-right">Remove</a>
    {% if model.isNew %}
      <h5>Creating new page {% if model.parentId %}
          <small>(as child of {{ model.parentId }})</small>{% endif %}</h5>
    {% endif %}
  </div>
  <div class="ibox-content">
    <div class="holder">
      <div class="row">
        <a data-toggle="modal" class="btn btn-primary btn-cancel-edit pull-right">Cancel</a>
        <a data-toggle="modal" class="btn btn-primary btn-save pull-right">Save changes</a>

        <div class="form-horizontal panel-body langs-body">
          <div class="form-group parent-control">
            <label class="col-lg-2 control-label" for="1">Identifier</label>

            <div class="col-lg-10">
              <input id="1" type="text" name="identifier" class="form-control">
            </div>
          </div>
        </div>
        <div class="form-group parent-control">
          <label class="col-lg-2 control-label" for="1">SeoTitle</label>

          <div class="col-lg-10">
            <input id="1" type="text" name="title" class="form-control">
          </div>
        </div>
        <div class="form-group parent-control">
          <label class="col-lg-2 control-label" for="1">SeoDescription</label>

          <div class="col-lg-10">
            <input id="1" type="text" name="description" class="form-control">
          </div>
        </div>
        <div class="form-group parent-control">
          <label class="col-lg-2 control-label" for="1">SeoKeywords</label>

          <div class="col-lg-10">
            {% for keyword in keywords %}
              <div class="keyword">
                {% include '@SSApp/Widgets/keyword.twig' %}
                {% set id = id+1 %}
              </div>
            {% endfor %}
            <i class="action add-key fa fa-plus form-control">Добавить</i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
